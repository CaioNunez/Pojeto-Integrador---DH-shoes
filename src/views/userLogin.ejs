<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
    <link rel="stylesheet" href="/css/userLogin.css">
</head>

<body>
  <div id="login-container">
    <h1>Login</h1>
    
    <form action="/login" method="post">
      <label for="userName">Email</label>
      <input type="email" name="userLogin" id="user" placeholder="Digite seu email" autocomplete="off" required>
      <label for="password">Senha</label>
      <div id="password-img">    
        <input type="password" name="userPassword" id="password" placeholder="Digite sua senha" required>
        <a href="javaScript:mostrarSenha()"> <img src="/img/view2.png" alt="" id="img-password"></a>
        

      </div>

      <a href="#" id="forgot-pass">Esqueceu a senha?</a>
      <% if(locals.error){ %>
        <h3 class="error-alert"><%= error.message %></h3>
       <% } %>
      <button type="submit" id="btn">Login</button>

    </form>
   
    <div id="cadastrar-container">
      <p>Não é cadastrado?</p>
      <a href="/login/create">Clique aqui</a>
    </div>
  </div>
  <script>
    function mostrarSenha() {
      var tipo = document.getElementById("password");

      if (tipo.type == "password") {
        tipo.type = "text";
        document.getElementById("img-password").src = "/img/hidden2.png"
      } else {
        tipo.type = "password";
        document.getElementById("img-password").src = "/img/view2.png"
      }
    }
  </script>
</body>

</html>