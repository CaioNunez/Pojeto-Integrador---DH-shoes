<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/adminProductShow.css">
    
</head>

<body>
    <span id="conteudo">
        <div id="menu">
            <div id="top">
                <ul>
                    <li><img src="/img/logo.png"></li>
                </ul>
            </div>

            <div id="menu-options">
                <ul id="options">

                    <% if(userPermission===2) {%>
                        <li id="seller"> <img src="/img/add-user.png">
                            <a> Usuários</a>
                        </li>
                        <hr>

                   <% }%>
                    <li id="cleint"> <img src="/img/cleint.png">
                        <a href=""> Fornecedores</a>
                    </li>
                    <hr>
                    <li id="represented"> <img src="/img/home.png">
                        <a href=""> Representada</a>
                    </li>
                    <hr>
                    <li id="payment"> <img src="/img/payment-plans.png">
                        <a href=""> Planos de Pagamento</a>
                    </li>
                    <hr>
                    <li id="price"> <img src="/img/price.png">
                        <a href=""> Tabela de Preços</a>
                    </li>
                    <hr>
                    <li id="product"> <img src="/img/product.png">
                        <a href="""> Produtos</a>
                    </li>
                    <hr>
                    <li id=" requests"> <img src="/img/cart.png">
                            <a href="">Pedidos</a>
                    </li>
                    <hr>
                    <li id="report"> <img src="/img/report.png">
                        <a href="">Relatórios</a>
                    </li>
                    <hr>

                </ul>
            </div>




        </div>

        <div id="panel">
            <div id="header-options">
                <div id="img-Avatar">
                    <div>
                        <ul>
                            <li id="avatar" > <img src="/img/businessman.png" > </li>
                       </ul>

                    </div>
                    <div id="avatar-name">
                        <ul>
                            <li> <%= user %></li>  
                        </ul>

                    </div>
                  
                </div>

               
                <div id="panel-header">
                    <div id="return">
                        <img src="/img/arrow.png" alt="">
                    </div>

                    <div id="panel-header-option">
                       <a id="return-a" href="/administrator"> Retornar </a>
                    </div>

                </div>
            </div>
            <hr>
            <div id="nav">
                > Administrador/ Produtos
            </div>
            <h2>Produtos</h2>
            <div id="div-table">
                <div>
                    <form action="/administrator/product/show" method="post">
                        <div class="Product-input">
                            <label for="criterion-id">Critério</label>
                            <select name="column" id="criterion-id">
                                <option value="" selected>Selecione</option>
                                <option value="genre">Gênero</option>
                                <option value="mark">Marca</option>
                                <option value="style">Estilo</option>
                            </select>
                        </div>
                        <div id="btn-txt">
                            <div id="search">
                                <label for="search-id">Pesquisar:</label>
                                <input type="text" id="search-id" name="search">
                                <button type="submit" id="btn-search"><img src="/img/search.png" alt=""></button>
                                
                            </div>
                            <div id="btn-img">
                                <button id="btn"><a href="/administrator/product/create">Adicionar</a></button>
                              
                            </div>
                            
                        </div>

                    </form>
                    
                    
                </div>

                <section id="product-list">
                    <% if(locals.error){%>
                    
                        <h3 class="error-alert2" ><%= error.message %></h3>
    
                    <%}%>

                    <% if(locals.success){%>
                        <script>
                            function alertMsg(success){
                              alert (success)
                            }
                           alertMsg ("<%= success.message %>")
                        </script>
                    <%}%>

                    
                    <% if(products.length > 0){ %>
                        <form action="">
                        <div class="table-container">
                          <table id="tbl-01">
                            <thead>
                              <tr>
                                <th>Id</th>
                                <th>Gênero</th>
                                <th>Marca</th>
                                <th>Estilo</th>
                                <th>Numero</th>
                                <th>Descrição</th>
                                <th>Custo</th>
                                <th>Venda</th>
                                <th>Qtde</th>
                                <th>Ações</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% for(let product of products) { %>
                              <tr>
                                <td><%= product.id %></td>
                                <td><%= product.genre %></td>
                                <td><%= product.mark %></td>
                                <td><%= product.style %></td>
                                <td><%= product.number %></td>
                                <td><%= product.description %></td>
                                <td><%= product.costValue %></td>
                                <td><%= product.saleValue %></td>
                                <td><%= product.quantity %></td>
                                
                                <td class="table-actions">
                                    <a href="/administrator/product/edit/<%= product.id%>"><img src="/img/edit.png"></a>
                                    <!-- <a onclick="javaScript:showModal('Confirmar Exclusão!','<%= product.id %>','<%= product.genre %>',
                                   '<%= product.mark %>', '<%= product.style %>','<%= product.number %>','<%= product.description %>',
                                   '<%= product.costValue %>', '<%= product.saleValue %>','<%= product.quantity %>')"><img src="/img/cancel.png"></a> -->
                                   <a href="/administrator/product/delete/<%= product.id%>"><img src="/img/cancel.png"></a>
                                </td>
                              </tr>
                              <% } %>
                            </tbody>
                          </table>
                        </div>
                    </form>
                      <% } else { %>
                        <h2 class="error-alert">Nenhum Produto foi encontrado!</h2>
                      <%} %>

                </section>
                
            </div>
            

        </div>
        <div id="id02" class="modal">
            <div class="modal-content animate-zoom card-4">
                <header class="container teal">
                    <span onload="document.getElementById('id02').style.display='none'"
                        class=" button display-topright">&times;</span>
                    <h2>Cucesso!</h2>
                </header>
                <div class="container">
                    <h4>Produto atualizado com sucesso!</h4>
                    <br>
                    
                </div>
    
            </div>
        </div>
        <div id="id01" class="modal">
            <div class="modal-content animate-zoom card-4">
                <header class="container teal">
                    <span onclick="document.getElementById('id01').style.display='none'"
                        class=" button display-topright">&times;</span>
                        <h2 id="title-modal">Confirmar Exclusão</h2>
                </header>
                <div class="container">
                    <section id="frm2">
                        <form action="/administrator/product/delete" method="post" enctype="multipart/form-data">
                            <div class="container-input">
                                <div class="Product-input">
                                    <label for="input-id-modal">Id:</label>
                                    <input type="text" name="id" id="input-id-modal" disabled />
                                </div>
            
                                <div class="Product-input">
                                    <label for="input-genre-modal">Gênero:</label>
                                    <input name="genre" id="input-genre-modal" disabled>
                                </div>

                                <div class="Product-input">
                                    <label for="input-mark-modal">Marca:</label>
                                    <input type="text" name="mark" id="input-mark-modal" disabled/>
                                </div>

                                
        
                            </div>
                            <div class="container-input">
                                <div class="Product-input">
                                    <label for="input-style-modal">Estilo:</label>
                                    <input type="text" name="style" id="input-style-modal" disabled/>
                                    
                                </div>
                                <div class="Product-input">
                                    <label for="input-number-modal">Numero:</label>
                                    <input type="text" name="number" id="input-number-modal" disabled />
                                </div>

                                <div class="Product-input">
                                    <label for="input-costValue-modal">Custo:</label>
                                    <input  type="text" name="cost" id="input-costValue-modal" disabled />
                                </div>

                            </div>
        
                            <div class="container-input">
                                
                                <div class="Product-input">
                                    <label for="input-saleValue-modal">Venda:</label>
                                    <input  type="text" name="sale" id="input-saleValue-modal" disabled/>
                                </div>
                               
                                <div class="Product-input">
                                    <label for="input-quantity-modal">Quantidade:</label>
                                    <input  type="text" name="quantity" id="input-quantity-modal" disabled/>
                                </div>
        
        
                            </div>
                            <div class="container-input">
                                <div class="Product-input">
                                    <label for="input-description-modal">Descrição:</label>
                                    <textarea  name="description" id="input-description-modal" disabled> </textarea>
                                </div>
        
                            </div>
        
                            
                           
                            <div id="btn-options">
                                <input type="submit" value="Excluir"  class="btn">
                               
                            </div>
                           
                            
                        </form>
                    </section>
                    
                </div>
    
            </div>
        </div>
       
    </span>
    
 <script src="/js/adminProduct.js"></script>


</body>

</html>